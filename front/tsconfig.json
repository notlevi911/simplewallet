{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES2020",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "./app/**/*.ts", "./app/**/*.tsx", "./components/**/*.ts", "./components/**/*.tsx", "./hooks/**/*.ts", "./hooks/**/*.tsx", "./lib/**/*.ts", "./lib/**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
